; loop.si

[[ program_entry ]]
main = proc () {
    s = "simon"

    loop i = 1 : i < 10 : i += 1 {
        print(i)
    }

    i = 0
    loop : i < 10 : i += 1 {
        print(i)
    }

    i = 0
    loop : i < 10 : {
        print(i)
        i += 1
    }

    i = 0
    loop :: {
        print(i)
        i += 1
        if i == 10 { break }
    }

    loop i = 0 : i < slen(s) : i += 1 {
        print(sch(s, i))
    }

    print()
}
